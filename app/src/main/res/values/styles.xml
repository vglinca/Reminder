<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_green_dark</item>
    </style>

    <style name="myTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">@android:color/holo_green_dark</item>
        <item name="android:numbersSelectorColor">#88000000</item>
        <item name="android:headerBackground">@android:color/holo_blue_dark</item>
        <item name="android:colorAccent">@android:color/holo_blue_light</item>
    </style>


</resources>
